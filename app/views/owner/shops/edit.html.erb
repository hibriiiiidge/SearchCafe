<div class="page_title">管理者店舗情報編集</div>
<%= form_for(@shop, url: owner_shop_path(@shop), html: { method: :put }) do |f| %>
    <% if @shop.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>
            <ul>
            <% @shop.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="container form_container">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :name, "店舗名" %>
                </label>
                <div class="col-md-8">
                    <%= f.text_field :name, autofocus: true, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :area, "エリア" %>
                </label>
                <div class="col-md-8">
                    <%= f.text_field :area, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :address, "住所" %>
                </label>
                <div class="col-md-8">
                    <%= f.text_field :address, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :email, "メールアドレス" %>
                </label>
                <div class="col-md-8">
                    <%= f.text_field :email, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :tel, "電話番号" %>
                </label>
                <div class="col-md-8">
                    <%= f.text_field :tel, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :url, "webサイト" %>
                </label>
                <div class="col-md-8">
                    <%= f.text_field :url, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label class="field control-label col-md-offset-2 col-md-2">
                    <%= f.label :image1, "店舗イメージ" %>
                </label>
                <div class="col-md-8">
                    <%= f.file_field :image1, class: "form-control" %>
                </div>
            </div>
            <br>
            <div class="actions">
                <%= f.submit "更新", class: 'btn btn-primary btn-m' %>
            </div>
        </form>
    </div>
    
<% end %>

<%= link_to 'Back', owner_shops_path %>
